<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta name="charset" content="UTF-8" />
    <script src="~/jQuery/dist/jquery.js"></script>
    <script src="~/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/JobApplicationSpam/js/site.js"></script>
    <link rel="stylesheet" href="~/Font-Awesome/web-fonts-with-css/css/fontawesome-all.css" />
    <link rel="stylesheet" href="~/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/JobApplicationSpam/css/site.css" />
    <title>Bewerbungsspam</title>
</head>
<body>
    <!--/.Navbar-->
    <div class="container">
        <nav class="nav navbar mainBackgroundColor mb-3">
            <h3><a style="color: white" href="#">Bewerbungsspam</a></h3>
            <div style="width: 100%">
                <div style="color: white;">
                    <button class="navbar-toggler toggler-example" type="button" data-toggle="collapse" data-target="#navbarSupportedContent1" aria-controls="navbarSupportedContent1"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span><i class="fa fa-bars fa-1x" style="color: white"></i></span>
                    </button>
                    <b>@(Model != null && Model.User.UserName.Contains('@') ? Model.User.UserName : "Guest")</b>
                </div>
                <div class="collapse navbar-collapse" id="navbarSupportedContent1">
                    <ul class="navbar-nav mr-auto">
                        @if (Model != null && Model.User.UserName.Contains('@'))
                        {
                            <li class="nav-item active">
                                <a class="nav-link" style="color:white" asp-controller="Account" asp-action="ChangePassword">Change password</a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" style="color:white" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item active">
                                <a class="nav-link" style="color:white" asp-controller="Account" asp-action="Login">Login to an other account</a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" style="color:white" asp-controller="Account" asp-action="Register">Get full account</a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" style="color:white" asp-controller="Account" asp-action="Logout">Logout (this will delete your guest account)</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
        @{
            var menuItems =
                new[]
                {
                    new MenuItem{ Text = "Sent Applications", FontAwesome = "fa fa-list-alt", ActivatesPages = @"[""SentApplications""]" },
                    new MenuItem{ Text = "Documents", FontAwesome = "fa fa-file", ActivatesPages = @"[""Documents""]" },
                    new MenuItem{ Text = "User Values", FontAwesome = "fa fa-user", ActivatesPages = @"[""UserValues""]" },
                    new MenuItem{ Text = "Custom Variables", FontAwesome = "fa fa-wrench", ActivatesPages = @"[""CustomVariables""]" },
                    new MenuItem{ Text = "Email", FontAwesome = "fa fa-envelope", ActivatesPages = @"[""DocumentEmail""]" },
                    new MenuItem{ Text = "Apply now", FontAwesome = "fa fa-handshake", ActivatesPages = @"[""ApplyNow""]" }
                };
        }


        <div class="d-lg-none sticky-top" style="height:30px; margin-bottom: 15px; background: white">
            @await Html.PartialAsync(
                "_NavigationMenuTop",
                @menuItems
            )
        </div>
        <div class="row">
            <div class="sticky-top col-12 col-lg-4 d-none d-lg-block" style="height:100%">
                @await Html.PartialAsync(
                    "_NavigationMenuLeft",
                    @menuItems
                )
            </div>
            <div class="col-lg-8">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>
