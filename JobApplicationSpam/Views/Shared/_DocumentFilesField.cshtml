@model DocumentFilesField

<div id="@Model.Id">
    <table class="table table-striped table-bordered">
    @foreach(var fileField in Model.Files)
    {
        <tr>
            <td style="width: 100%">@fileField.Name</td>
            <td class="text-center mx-1"><i class="fa fa-trash"></i></td>
            <td class="text-center mx-1"><i class="fa fa-download"></i></td>
            <td class="text-center mx-1"><i class="fa fa-arrow-up"></i></td>
            <td class="text-center mx-1"><i class="fa fa-arrow-down"></i></td>
        </tr>
    }
    </table>
</div>